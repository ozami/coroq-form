{
    "name": "coroq/form",
    "description": "Type-safe PHP form validation library with filtering, nested forms, and typed error objects. Zero dependencies.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "form",
        "validation",
        "input",
        "filter",
        "type-safe",
        "nested-form"
    ],
    "authors": [
        {
            "name": "Ozawa Masayuki",
            "email": "ozawa@coroq.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "ext-bcmath": "*",
        "ext-fileinfo": "*",
        "ext-filter": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Coroq\\Form\\": "src/"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit test/",
        "coverage": "@php vendor/bin/phpunit test/ --coverage-html coverage",
        "coverage-text": "@php vendor/bin/phpunit test/ --coverage-text"
    }
}
